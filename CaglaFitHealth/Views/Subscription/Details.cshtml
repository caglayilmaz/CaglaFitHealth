@model CaglaFitHealth.Models.Entity.Subscription

@{
    ViewData["Title"] = "Görüntüle";
}

<h1>Detaylar</h1>

<div>
    <h4>Üyelik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Üye
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.FullName)
        </dd>
        <dt class="col-sm-2">
            Antrenör
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.FullName)
        </dd>
        <dt class = "col-sm-2">
            Üyelik Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionDate)
        </dd>
        <dt class = "col-sm-2">
            Üyelik Süresi (Ay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionDuration)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Düzenle</a> |
    <a asp-action="Index">Listeye Dön</a>
</div>
