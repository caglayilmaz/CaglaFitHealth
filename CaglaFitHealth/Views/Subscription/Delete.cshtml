@model CaglaFitHealth.Models.Entity.Subscription

@{
    ViewData["Title"] = " Üyelik Sil";
}

<h1>Sil</h1>

<h3>Üyelik kaydını silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Subscription</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Üye
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.FullName)
        </dd>
        <dt class="col-sm-2">
            Antrenör
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.FullName)
        </dd>
        <dt class="col-sm-2">
            Üyelik Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionDate)
        </dd>
        <dt class="col-sm-2">
            Üyelik Süresi (Ay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionDuration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>
