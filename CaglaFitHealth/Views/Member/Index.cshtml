@model IEnumerable<CaglaFitHealth.Models.Entity.Member>

@{
    ViewData["Title"] = "Üye Yönetimi";
}

<h1>Üye Yönetimi</h1>

<p>
    <a asp-action="Create">Üye Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Adı
                @* @Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                Soyadı
                @* @Html.DisplayNameFor(model => model.Surname)*@
            </th>
            <th>
                Telefon No
                @* @Html.DisplayNameFor(model => model.PhoneNumber)*@
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Yaş
                @* @Html.DisplayNameFor(model => model.Age)*@
            </th>
            <th>
                Boy
                @* @Html.DisplayNameFor(model => model.Height)*@
            </th>
            <th>
                Ağırlık
                @* @Html.DisplayNameFor(model => model.Weight)*@
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Görüntüle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
