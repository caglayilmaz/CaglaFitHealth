@model CaglaFitHealth.Models.Entity.Trainer

@{
    ViewData["Title"] = "Antrenör Sil";
}

<h1>Sil</h1>

<h3>Antrenör kaydını silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Antrenör</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Soyadı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            Doğum Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            Branşı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Branch)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>
